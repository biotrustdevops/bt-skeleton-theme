<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}
    
    {% # Load TailwindCSS %}
    {{ 'tailwind.css' | asset_url | stylesheet_tag }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}
    
    {% # Favicon %}
    <link rel="icon" type="image/png" href="https://www.biotrust.com/cdn/shop/files/favicon_443eddda-8a72-4c30-b20e-11c9a9f73f84_32x32.png?v=1613671641" sizes="32x32">
    <link rel="shortcut icon" type="image/png" href="https://www.biotrust.com/cdn/shop/files/favicon_443eddda-8a72-4c30-b20e-11c9a9f73f84_32x32.png?v=1613671641">

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
