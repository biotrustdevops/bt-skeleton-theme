            {% endif %}
            {% if section.settings.social_pinterest != blank %}
              <a href="{{ section.settings.social_pinterest }}" class="footer__social-link" aria-label="Pinterest">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738a.36.36 0 01.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      </div>

      {% # Payment icons %}
      {% if section.settings.show_payment_icons %}
        <div class="footer__payment">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
          {% endfor %}
        </div>
      {% endif %}

      {% # Legal disclaimers %}
      <div class="footer__disclaimer">
        <p>{{ 'footer.disclaimer_line1' | t }}</p>
        <p>{{ 'footer.disclaimer_line2' | t }}</p>
      </div>

      {% # Bottom section %}
      <div class="footer__bottom">
        <div class="footer__logo">
          <img src="https://bio-img.biotrust.com/Shopify/footer/emblem.png" 
               alt="BioTRUST" 
               width="60" 
               height="60" 
               loading="lazy">
        </div>
        <div class="footer__copyright">
          © {{ 'now' | date: '%Y' }} BioTRUST Nutrition®
        </div>
        <div class="footer__legal-links">
          <a href="{{ routes.root_url }}pages/sitemap">{{ 'footer.sitemap' | t }}</a> |
          <a href="{{ routes.root_url }}pages/privacy-policy">{{ 'footer.privacy_policy' | t }}</a> |
          <a href="{{ routes.root_url }}pages/terms-of-use">{{ 'footer.terms_of_use' | t }}</a> |
          <a href="{{ routes.root_url }}pages/supplier-po-terms-conditions">{{ 'footer.supplier_po_terms' | t }}</a>
        </div>
        <div class="footer__offer-id">
          Offer ID: 1000
        </div>
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    width: 100%;
    background: linear-gradient(to bottom, #0066cc, #003d7a);
    color: white;
  }

  .footer__contact-banner {
    background: #00cc66;
    color: white;
    text-align: center;
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer__main {
    padding: 3rem 0 2rem;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer__column {
    min-width: 200px;
  }

  .footer__heading {
    color: white;
    font-size: 1rem;
    font-weight: 700;
    line-height: 1.2;
    text-transform: uppercase;
    margin-bottom: 1rem;
    letter-spacing: 0.5px;
  }

  .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__list li {
    margin-bottom: 0;
    line-height: 1.3;
  }

  .footer__list a {
    color: white;
    text-decoration: none;
    font-size: 0.8125rem;
    transition: opacity 0.2s;
  }

  .footer__list a:hover {
    opacity: 0.8;
  }

  .footer__social {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: white;
    border-radius: 50%;
    color: #0066cc;
    transition: transform 0.2s;
  }

  .footer__social-link:hover {
    transform: scale(1.1);
  }

  .footer__payment {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    margin: 2rem 0;
  }

  .footer__payment-icon {
    height: 32px;
    width: auto;
  }

  .footer__disclaimer {
    text-align: center;
    font-size: 0.625rem;
    line-height: 1.4;
    opacity: 0.8;
    margin-bottom: 2rem;
    padding: 0 2rem;
  }

  .footer__disclaimer p {
    margin: 0.5rem 0;
  }

  .footer__bottom {
    text-align: center;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  .footer__logo {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .footer__copyright {
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .footer__legal-links {
    font-size: 0.75rem;
    margin-bottom: 1rem;
  }

  .footer__legal-links a {
    color: white;
    text-decoration: none;
    margin: 0 0.5rem;
  }

  .footer__legal-links a:hover {
    text-decoration: underline;
  }

  .footer__offer-id {
    font-size: 0.75rem;
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .footer__grid {
      grid-template-columns: 1fr 1fr;
    }
    
    .footer__disclaimer {
      padding: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .footer__grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer__social {
      justify-content: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Contact Phone",
      "default": "(800) 766-5086"
    },
    {
      "type": "text",
      "id": "contact_hours",
      "label": "Contact Hours",
      "default": "MON - FRI 9AM - 6PM ET"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_youtube",
      "label": "YouTube URL"
    },
    {
      "type": "url",
      "id": "social_pinterest",
      "label": "Pinterest URL"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}