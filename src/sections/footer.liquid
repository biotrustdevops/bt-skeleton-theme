    <div class="footer__container">
      <div class="footer__grid">
        {% # Customer Support column %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ 'footer.customer_support' | t }}</h3>
          <ul class="footer__list">
            <li><a href="{{ routes.root_url }}pages/purchase-history">{{ 'footer.purchase_history' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/manage-subscriptions">{{ 'footer.manage_subscriptions' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/subscribe-save-faq">{{ 'footer.subscribe_save_faq' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/track-my-order">{{ 'footer.track_my_order' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/shipping-policies">{{ 'footer.shipping_policies' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/return-policy">{{ 'footer.return_policy' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/forgot-password">{{ 'footer.forgot_password' | t }}</a></li>
            <li><a href="{{ routes.account_register_url }}">{{ 'footer.create_account' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/customer-support">{{ 'footer.customer_support_page' | t }}</a></li>
          </ul>
        </div>

        {% # Shop Now column %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ 'footer.shop_now' | t }}</h3>
          <ul class="footer__list">
            <li><a href="{{ routes.all_products_collection_url }}">{{ 'footer.all_products' | t }}</a></li>
            <li><a href="{{ routes.root_url }}collections/proteins">{{ 'footer.proteins' | t }}</a></li>
            <li><a href="{{ routes.root_url }}collections/collagen-protein">{{ 'footer.collagen_protein' | t }}</a></li>
            <li><a href="{{ routes.root_url }}collections/immune-support">{{ 'footer.immune_support' | t }}</a></li>
            <li><a href="{{ routes.root_url }}collections/digestive-health">{{ 'footer.digestive_health' | t }}</a></li>
            <li><a href="{{ routes.root_url }}collections/healthy-living">{{ 'footer.healthy_living' | t }}</a></li>
            <li><a href="{{ routes.root_url }}collections/anti-aging">{{ 'footer.anti_aging' | t }}</a></li>
            <li><a href="{{ routes.root_url }}collections/gear-equipment">{{ 'footer.gear_equipment' | t }}</a></li>
          </ul>
        </div>

        {% # Company column %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ 'footer.company' | t }}</h3>
          <ul class="footer__list">
            <li><a href="{{ routes.root_url }}pages/our-coaches">{{ 'footer.our_coaches' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/quality">{{ 'footer.quality' | t }}</a></li>
            <li><a href="{{ routes.root_url }}blogs/biotrust-blog">{{ 'footer.biotrust_blog' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/reviews">{{ 'footer.reviews' | t }}</a></li>
          </ul>
        </div>

        {% # Get In Touch column %}
        <div class="footer__column">
          <h3 class="footer__heading">{{ 'footer.get_in_touch' | t }}</h3>
          <ul class="footer__list">
            <li><a href="{{ routes.root_url }}pages/contact">{{ 'footer.contact_us' | t }}</a></li>
            <li><a href="{{ routes.root_url }}pages/affiliates">{{ 'footer.affiliates' | t }}</a></li>
          </ul>
          <div class="footer__social">
            {% if section.settings.social_facebook != blank %}
              <a href="{{ section.settings.social_facebook }}" class="footer__social-link" aria-label="Facebook">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            {% endif %}
            {% if section.settings.social_instagram != blank %}
