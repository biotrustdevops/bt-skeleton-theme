{% liquid
  assign contact_phone = section.settings.contact_phone | default: '(800) 766-5086'
  assign contact_hours = section.settings.contact_hours | default: 'MON - FRI 9AM - 6PM ET'
%}

<footer class="footer">
  {% # Main footer content %}
