{% liquid
  assign section_title = section.settings.section_title | default: 'OUR MISSION'
  assign main_heading = section.settings.main_heading | default: 'Live Healthier, Age Better'
  assign description_text = section.settings.description_text | default: "We believe healthy aging means adding life to your years, not just years to your life. We're on a mission to empower you to take control of your health, so you can live a more vibrant, active and joyful life at every age."
%}

<section class="relative py-12 md:py-16 lg:py-20 overflow-hidden" data-section-id="{{ section.id }}">
  {% comment %} Decorative hexagon shapes {% endcomment %}
  {% if section.settings.show_hexagons %}
    {% comment %} Left hexagons - On top of content (z-20) {% endcomment %}
    <div class="absolute inset-0 pointer-events-none z-20">
      {% comment %} Desktop Left side hexagons {% endcomment %}
      {% if settings.hexagon_left_icon %}
        <img 
          src="{{ settings.hexagon_left_icon | image_url: width: 400 }}"
          alt=""
          class="absolute left-0 bottom-0 w-32 md:w-40 lg:w-48 h-auto hidden md:block"
          loading="lazy"
        >
      {% else %}
        <svg class="absolute left-0 bottom-0 w-32 md:w-40 lg:w-48 h-auto opacity-30 hidden md:block" viewBox="-50 0 250 450" xmlns="http://www.w3.org/2000/svg">
          <path d="M50 20 L120 60 L120 140 L50 180 L-20 140 L-20 60 Z" fill="#a8c8ec" opacity="0.5"/>
          <path d="M80 150 L150 190 L150 270 L80 310 L10 270 L10 190 Z" fill="#c5d9f2" opacity="0.4"/>
          <path d="M40 280 L110 320 L110 400 L40 440 L-30 400 L-30 320 Z" fill="#a8c8ec" opacity="0.3"/>
        </svg>
      {% endif %}
      
      {% comment %} Mobile Left side hexagons {% endcomment %}
      {% if settings.hexagon_mobile_left_icon %}
        <img 
          src="{{ settings.hexagon_mobile_left_icon | image_url: width: 200 }}"
          alt=""
          class="absolute left-0 bottom-0 w-24 h-auto md:hidden"
          loading="lazy"
        >
      {% else %}
        <svg class="absolute left-0 bottom-0 w-24 h-auto opacity-30 md:hidden" viewBox="-50 0 250 450" xmlns="http://www.w3.org/2000/svg">
          <path d="M50 20 L120 60 L120 140 L50 180 L-20 140 L-20 60 Z" fill="#a8c8ec" opacity="0.5"/>
          <path d="M80 150 L150 190 L150 270 L80 310 L10 270 L10 190 Z" fill="#c5d9f2" opacity="0.4"/>
          <path d="M40 280 L110 320 L110 400 L40 440 L-30 400 L-30 320 Z" fill="#a8c8ec" opacity="0.3"/>
        </svg>
      {% endif %}
    </div>
    
    {% comment %} Right hexagons - On top of content (z-20) {% endcomment %}
    <div class="absolute inset-0 pointer-events-none z-20">
      {% comment %} Desktop Right side hexagons {% endcomment %}
      {% if settings.hexagon_right_icon %}
        <img 
          src="{{ settings.hexagon_right_icon | image_url: width: 400 }}"
          alt=""
          class="absolute right-0 top-0 w-32 md:w-40 lg:w-48 h-auto hidden md:block"
          loading="lazy"
        >
      {% else %}
        <svg class="absolute right-0 top-0 w-32 md:w-40 lg:w-48 h-auto opacity-30 hidden md:block" viewBox="0 0 250 350" xmlns="http://www.w3.org/2000/svg">
          <path d="M150 30 L220 70 L220 150 L150 190 L80 150 L80 70 Z" fill="#a8c8ec" opacity="0.5"/>
          <path d="M120 180 L190 220 L190 300 L120 340 L50 300 L50 220 Z" fill="#c5d9f2" opacity="0.4"/>
        </svg>
      {% endif %}
      
      {% comment %} Mobile Right side hexagons {% endcomment %}
      {% if settings.hexagon_mobile_right_icon %}
        <img 
          src="{{ settings.hexagon_mobile_right_icon | image_url: width: 200 }}"
          alt=""
          class="absolute right-0 top-0 w-24 h-auto md:hidden"
          loading="lazy"
        >
      {% else %}
        <svg class="absolute right-0 top-0 w-24 h-auto opacity-30 md:hidden" viewBox="0 0 250 350" xmlns="http://www.w3.org/2000/svg">
          <path d="M150 30 L220 70 L220 150 L150 190 L80 150 L80 70 Z" fill="#a8c8ec" opacity="0.5"/>
          <path d="M120 180 L190 220 L190 300 L120 340 L50 300 L50 220 Z" fill="#c5d9f2" opacity="0.4"/>
        </svg>
      {% endif %}
    </div>
  {% endif %}
  
  {% comment %} Mission content {% endcomment %}
  <div class="relative z-10 max-w-6xl mx-auto px-6 md:px-8 lg:px-12">
    <div class="bg-gray-100 rounded-lg p-8 md:p-12 lg:p-16 text-center">
      {% if section_title != blank %}
        <p class="text-sm md:text-base text-[#005eb8] font-semibold tracking-wider uppercase mb-4">
          {{ section_title }}
        </p>
      {% endif %}
      
      {% if main_heading != blank %}
        <h2 class="font-normal text-[#003d78] mb-6 md:mb-8" style="font-size: 74px; line-height: 88px; height: 88px; font-family: 'League Gothic', sans-serif;">
          {{ main_heading }}
        </h2>
      {% endif %}
      
      {% if description_text != blank %}
        <div class="max-w-3xl mx-auto">
          <p class="text-base md:text-lg text-[#005eb8] leading-relaxed">
            {{ description_text }}
          </p>
        </div>
      {% endif %}
      
      {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <div class="mt-8">
          <a href="{{ section.settings.cta_link }}" 
             class="inline-block px-8 py-3 bg-[#005eb8] hover:bg-[#004a94] text-white font-semibold rounded-lg transition-colors duration-200">
            {{ section.settings.cta_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Our Mission",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "OUR MISSION"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Live Healthier, Age Better"
    },
    {
      "type": "textarea",
      "id": "description_text",
      "label": "Description Text",
      "default": "We believe healthy aging means adding life to your years, not just years to your life. We're on a mission to empower you to take control of your health, so you can live a more vibrant, active and joyful life at every age."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text",
      "info": "Optional button text"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Call to Action Link",
      "info": "Optional button link"
    },
    {
      "type": "checkbox",
      "id": "show_hexagons",
      "label": "Show Hexagons",
      "default": true,
      "info": "Toggle hexagon graphics. Images are configured in Theme Settings > Hexagon Graphics"
    }
  ],
  "presets": [
    {
      "name": "Our Mission"
    }
  ]
}
{% endschema %}