
<!-- Container wrapper - max-width on desktop, full-width on mobile -->
<div class="md:container md:mx-auto md:max-w-[1440px]">

<!-- Breadcrumb -->
<div class="p-3 hidden md:block">
    <a href="{{ routes.root_url }}" class="text-lg font-medium text-bt-blue">Home</a>
</div>

<!-- Product Image Viewer (Mobile Only) -->
<div class="md:hidden">
  {% render 'product-image-viewer', product: product, mobile_only: true %}
</div>

<!-- Main Product Section (Desktop) -->
<div class="md:flex">

    <!-- Left Side: Product Image Viewer (Desktop Only) -->
    <div class="hidden md:block md:w-1/2">
      {% render 'product-image-viewer', product: product, desktop_only: true %}
    </div>

    <!-- Right Side: Product Info -->
    <div class="flex-1 md:w-1/2 min-w-0">

      <!-- Buy Box with Package Selector -->
      <div class="px-1">
        {% render 'buy-box-v1' %}
      </div>

      <div class="px-1.5 mt-4">
        {% render 'yotpo-product-ugc' %}
      </div>
    </div>
</div>

<!-- Product Description -->
<div class="mt-2">
  {% render 'product-description', product: product, section: section %}
</div>

{% comment %} <!-- Product Featured Review -->
{% render 'product-featured-review', product: product %} {% endcomment %}

<!-- Product Frequently Bought Together -->
<div id="cbb-frequently-bought-box"></div>

{% comment %} <!-- Product Info Area -->
{% render 'product-info-area', product: product %} {% endcomment %}

<!-- Product Also Bought Together -->
<div id="cbb-also-bought-box"></div>

</div>
<!-- End container wrapper -->

<!-- Include Flavor Selector Modal -->
{% render 'flavor-selector', product: product %}

<!-- Swiper CSS and JS -->
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "t:general.product",
  "settings": [
    {
      "type": "text",
      "id": "nutroinfo_text",
      "label": "Nutrition Info Heading",
      "default": "Nutrition Information"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}